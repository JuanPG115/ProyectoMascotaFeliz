@page
@model MascotaFeliz.App.Presentacion.Pages.DuenosModel
@{
    ViewData["Title"] = "Dueños";
}

<link rel="stylesheet" href="~/css/lista.css">
<script src="https://kit.fontawesome.com/05b4673db6.js" crossorigin="anonymous"></script>
<div class="container">
    <div class="filtros">
        <div class="busca-id">
            <form>
                <label asp-for="BuscarId">Buscar por nombre:</label>
                <input type="text" asp-for="BuscarId" />
                <button type="submit" class="btn-filtro">Buscar</button>
            </form>
        </div>
    </div>
    @if (Model.listaDuenos.Count() > 0)
    {
        <table summary="Propietarios">

            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var dueno in Model.listaDuenos)
                {
                    <tr class="filas-lista">
                        <th scope="row">@dueno.Id</th>
                        <td>@dueno.Nombres</td>
                        <td>@dueno.Apellidos</td>
                        <td>@dueno.Direccion</td>
                        <td>@dueno.Telefono</td>
                        <td>@dueno.Correo</td>
                        <td class="actions">
                            <button class="btn-detalle"><a class="a-detalle fa-solid fa-eye" asp-page="./DetalleDueno"
                            asp-route-duenoId="@dueno.Id"></a></button>
                            <button class="btn-editar"><a class="a-edit fa-solid fa-pen-to-square" asp-page="./EditarDueno"
                            asp-route-duenoId="@dueno.Id"></a></button>
                            <form method="post"><button asp-page-handler="Borrar" asp-route-duenoId="@dueno.Id"
                            class="btn-borrar"><i class="a-borrar fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>

                }


            </tbody>
        </table>
    }
    else
    {
        <p>No hay dueños para mostrar</p>

    }
</div>
<div class="container-add-pet">
    <a class="btn-volver" asp-page="../Index"> Volver </a>
    <a class="btn-add" asp-page="./EditarDueno">+</a>
    <h2>Dueños</h2>
</div>
