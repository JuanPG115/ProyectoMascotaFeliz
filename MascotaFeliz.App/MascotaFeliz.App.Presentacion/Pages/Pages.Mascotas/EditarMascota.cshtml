@page
@model MascotaFeliz.App.Presentacion.Pages.EditarMascotaModel
@{
    ViewData["Title"] = @Model.nombrePage;
}

<link rel="stylesheet" href="~/css/add-edit.css" />
<div class="container">
    <header class="header">
        <h1>@Model.nombrePage</h1>
    </header>
    <form method="post" action="" class="contenedor-main">

        <input type="hidden" asp-for="mascota.Id"/>

        <div>
            <label asp-for="mascota.Nombre">Nombre: </label>
            <input asp-for="mascota.Nombre" type="text"/>
        </div>
        <div>
            <label asp-for="mascota.Color">Color: </label>
            <input asp-for="mascota.Color" type="text"/>
        </div>

        <div>
            <label asp-for="mascota.Especie">Especie: </label>
            <input asp-for="mascota.Especie" type="text"/>
        </div>

        <div>
            <label asp-for="mascota.Raza">Raza: </label>
            <input asp-for="mascota.Raza" type="text"/>
        </div>

        <div>
            <button class="button-enviar" type="submit">Guardar</button>
        </div>

        <div>
            <a class="btn-volver" asp-page="./Mascotas"> Volver </a>
        </div>
    </form>
</div>
