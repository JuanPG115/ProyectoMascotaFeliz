@page
@model MascotaFeliz.App.Presentacion.Pages.EditarMascotaModel
@{
    int mascotaId = Model.mascota.Id;
    ViewData["Title"] = @Model.nombrePage;
}

<link rel="stylesheet" href="~/css/css.mascotas/Add-mascota.css" />
<div class="container">
    <header class="header">
        <h1>@Model.nombrePage</h1>
    </header>
    <form method="post" action="" class="contenedor-main">

        <input type="hidden" asp-for="mascota.Id" name="id" />

        <div>
            <label asp-for="mascota.Nombre" for="nombre">Nombre: </label>
            <input asp-for="mascota.Nombre" type="text" name="nombre" />
        </div>
        <div>
            <label asp-for="mascota.Color" for="color">Color: </label>
            <input asp-for="mascota.Color" type="text" name="color" />
        </div>

        <div>
            <label asp-for="mascota.Especie" for="especie">Especie: </label>
            <input asp-for="mascota.Especie" type="text" name="especie" />
        </div>

        <div>
            <label asp-for="mascota.Raza" for="raza">Raza: </label>
            <input asp-for="mascota.Raza" type="text" name="raza" />
        </div>

        <div>
            <button class="button-enviar" type="submit">Guardar</button>
        </div>

        <div>
            <a class="btn-volver" asp-page="./Mascotas"> Volver </a>
        </div>
    </form>
</div>
