@page
@model MascotaFeliz.App.Presentacion.Pages.DetalleMascotaModel
@{
    ViewData["Title"] = "Detalle mascota";
}

<link rel="stylesheet" href="~/css/add-edit.css" />
<div class="container">
    <header class="header">
        <h1>Detalle mascota</h1>
    </header>
    <form method="post" action="" class="contenedor-main">

        <div>
            <label><strong>Id: </strong> @Model.mascota.Id</label>
        </div>
        <div>
            <label><strong>Nombre: </strong> @Model.mascota.Nombre</label>
        </div>
        <div>
            <label><strong>Color: </strong> @Model.mascota.Color</label>
        </div>

        <div>
            <label><strong>Especie: </strong> @Model.mascota.Especie</label>
        </div>

        <div>
            <label><strong>Raza: </strong> @Model.mascota.Raza</label>
        </div>
        <div>
            <label><strong>Dueño: </strong> @Model.mascota.Dueno</label>
        </div>
        <div>
            <label><strong>Veterinario: </strong> @Model.mascota.Veterinario</label>
        </div>
        <div>
            <label><strong>Historia: </strong> @Model.mascota.Historia</label>
        </div>
        <br>
        <br>
        <div>

            <a class="btn-volver" asp-page="./Mascotas"> Volver </a>
        </div>
    </form>
</div>
