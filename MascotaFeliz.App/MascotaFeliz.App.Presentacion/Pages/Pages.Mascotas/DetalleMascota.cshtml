@page
@model MascotaFeliz.App.Presentacion.Pages.DetalleMascotaModel
@{
    ViewData["Title"] = "Mostrar mascota";
}

<link rel="stylesheet" href="~/css/Add-edit.css" />
<div class="container">
  <header class="header">
    <h1>Mostrar mascota</h1>
  </header>
  <form method="post" class="contenedor-main">
     <input type="hidden" asp-for="mascota.Id"/>
    <div>
      <label asp-for="mascota.Nombre">Nombre: </label>
      <input asp-for="mascota.Nombre" type="text"disabled/>
    </div>
    <div>
      <label asp-for="mascota.Color">Color: </label>
      <input asp-for="mascota.Color" type="text"disabled/>
    </div>

    <div>
      <label asp-for="mascota.Especie">Especie: </label>
      <input asp-for="mascota.Especie" type="text"disabled/>
    </div>

    <div>
      <label asp-for="mascota.Raza">Raza: </label>
      <input asp-for="mascota.Raza" type="text"disabled/>
    </div>
    <div>
      <label asp-for="mascota.Dueno">Dueño: </label>
      <input asp-for="mascota.Dueno" type="text" disabled/>
    </div>
    <div>
      <label asp-for="mascota.Veterinario">Veterinario: </label>
      <input asp-for="mascota.Veterinario" type="text" disabled/>
    </div>
    <div>
      <label asp-for="mascota.Historia">Historia Clinica: </label>
      <input asp-for="mascota.Historia" type="text" disabled/>
    </div>
    <br>
    <br>
    <div>
      <a class="btn-volver" asp-page="./Mascotas"> Volver </a>
    </div>
  </form>
</div>