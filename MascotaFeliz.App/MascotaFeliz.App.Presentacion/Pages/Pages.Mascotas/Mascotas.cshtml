@page
@model MascotaFeliz.App.Presentacion.Pages.MascotasModel
@{
    ViewData["Title"] = "Mascotas";
}

<link rel="stylesheet" href="~/css/lista.css" />
<div class="container">
    <div class="filtros">
        <div class="busca-id">
            <label for="buscar-id">Buscar por id:</label>
            <input type="text" name="buscar-id" />
            <button type="submit" class="btn-filtro">Buscar</button>
        </div>
        <div class="busca-nombre">
            <label for="buscar-nombre">Filtrar por nombre:</label>
            <input type="text" name="buscar-nombre" />
            <button class="btn-filtro">Filtrar</button>
        </div>
    </div>
    <table summary="Mascotas">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Color</th>
                <th scope="col">Especie</th>
                <th scope="col">Raza</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mascota in Model.listaMascotas)
            {


                <tr class="filas-lista">
                    <th scope="row">@mascota.Id</th>
                    <td>@mascota.Nombre</td>
                    <td>@mascota.Color</td>
                    <td>@mascota.Especie</td>
                    <td>@mascota.Raza</td>
                    <td class="actions">
                        <button class="btn-detalle"><a asp-page="./DetalleMascota"
                            asp-route-mascotaId="@mascota.Id">Detalle</a></button>
                        <button class="btn-editar"><a asp-page="./EditarMascota"
                            asp-route-mascotaId="@mascota.Id">Editar</a></button>
                        <form method ="post"><button type="submit" asp-page-handler="Borrar" asp-route-mascotaId="@mascota.Id"
                            class="btn-borrar">Borrar</button></form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="container-add-pet">
    <a class="btn-volver" asp-page="../Index"> Volver </a>
    <a class="btn-add" asp-page="./EditarMascota">+</a>
    <h2>Mascotas</h2>
</div>
